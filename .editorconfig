root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.gleam]
indent_style = space
indent_size = 3
max_line_length = 80

[*.md]
trim_trailing_whitespace = false
indent_style = space
max_line_length = 80


[{LICENSE,manifest.toml}]
end_of_line = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
